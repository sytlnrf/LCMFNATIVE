<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="#3A5FCD"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/search_bt"
            android:layout_marginLeft="@dimen/top_bar_search_margin_left"
            android:layout_marginTop="@dimen/top_bar_search_margin"
            android:layout_marginBottom="@dimen/top_bar_search_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/abc_ic_search_api_mtrl_alpha"
            />
        <TextView
            android:id="@+id/search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_bar_search_margin"
            android:layout_marginBottom="@dimen/top_bar_search_text_margin"
            android:textSize="@dimen/top_bar_text_size"
            android:textColor="#ffffff"
            android:text="@string/search"
            />

        <TextView
            android:id="@+id/top_bar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="@string/profit"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/top_bar_text_center_left"
            android:textSize="@dimen/top_bar_text_center_size"
            android:textStyle="bold"
            />


    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:background="#000000"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />
    <!--<ImageView-->
        <!--android:id="@+id/cursor"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:scaleType="matrix"-->
        <!--android:src="@drawable/a"-->
        <!--/>-->
    <LinearLayout
        android:id="@+id/tab_images"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="#ffffff">
        <ImageView
            android:id="@+id/profit_tab_image"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/tab_margin_top"
            android:layout_weight="1.0"
            android:layout_gravity="center"
            android:src="@mipmap/profit_ac"/>
        <ImageView
            android:id="@+id/rank_tab_image"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/tab_margin_top"
            android:layout_weight="1.0"
            android:layout_gravity="center"
            android:src="@mipmap/rank"/>
        <ImageView
            android:id="@+id/vote_tab_image"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/tab_margin_top"
            android:layout_weight="1.0"
            android:layout_gravity="center"
            android:src="@mipmap/vote_up"/>
        <ImageView
            android:id="@+id/collect_tab_image"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/tab_margin_top"
            android:layout_weight="1.0"
            android:layout_gravity="center"
            android:src="@mipmap/collect"/>
        <ImageView
            android:id="@+id/me_tab_image"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/tab_margin_top"
            android:layout_weight="1.0"
            android:layout_gravity="center"
            android:src="@mipmap/me"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/tab_words"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/profit_tab_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/profit"
            android:textColor="#3A5FCD"
            android:textSize="@dimen/tab_text_size"
            />

        <TextView
            android:id="@+id/rank_tab_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/rank"
            android:textColor="#000000"
            android:textSize="@dimen/tab_text_size"
            />

        <TextView
            android:id="@+id/vote_tab_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/vote"
            android:textColor="#000000"
            android:textSize="@dimen/tab_text_size"
             />
        <TextView
            android:id="@+id/collect_tab_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/collect"
            android:textColor="#000000"
            android:textSize="@dimen/tab_text_size"
            />

        <TextView
            android:id="@+id/me_tab_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/me"
            android:textColor="#000000"
            android:textSize="@dimen/tab_text_size"
            />
    </LinearLayout>

</LinearLayout>
